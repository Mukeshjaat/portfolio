<div class="custom-slider bg-dark">
    <div class="slider-wrapper">
      <div class="slider">
        @for ($i=0; $i<50; $i++)
          <div class="slide"><img src="img/carousel-1.jpg" alt="Image 1"></div>
          <div class="slide"><img src="img/carousel-2.jpg" alt="Image 2"></div>
          <div class="slide"><img src="img/carousel-1.jpg" alt="Image 3"></div>
          <div class="slide"><img src="img/carousel-2.jpg" alt="Image 4"></div>
        @endfor
      </div>

     
      <div class="slider-info" style="z-index: 1000">
        <h1 style="color: gold">Awesome Title</h1>
        <p>This is a cool description about the slider or company or anything you like.</p>
        <button>Learn More</button>
      </div>
    </div>

    <button id="prevBtn" class="slider-btn left-btn">&#10094;</button>
    <button id="nextBtn" class="slider-btn right-btn">&#10095;</button>
  </div>
  
  <style>
    body {
      margin: 0;
      padding: 0;
      background: #111;
    }

    .custom-slider {
      position: relative;
      width: 100%;
      height: 600px;
      overflow: hidden;
    }

    .slider-wrapper {
      display: flex;
      height: 100%;
      position: relative;
    }

    /* Slider */
    .slider {
      display: flex;
      flex: 0 0 75%;
      /* 75% Width for images */
      transition: transform 0.8s cubic-bezier(0.65, 0, 0.35, 1);
      height: 100%;
    }

    .slide {
      flex: 0 0 33.3333%;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
    }

    .slide img {
      width: 90%;
      height: 90%;
      object-fit: cover;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
      transition: transform 0.8s ease, opacity 0.8s ease, filter 0.8s ease;
    }

    /* Info panel */
    .slider-info {
      flex: 0 0 20%;
      color: white;
      padding: 10px 10px;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .slider-info h2 {
      font-size: 28px;
      margin-bottom: 20px;
    }

    .slider-info p {
      font-size: 16px;
      margin-bottom: 30px;
    }

    .slider-info button {
      background: #d4af37;
      border: none;
      padding: 10px 20px;
      color: black;
      border-radius: 5px;
      cursor: pointer;
    }

    .slider-info button:hover {
      background: #c59c28;
    }

    /* Buttons */
    .slider-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: #d4af37;
      border: none;
      padding: 12px 18px;
      border-radius: 50%;
      cursor: pointer;
      font-size: 20px;
      color: white;
      z-index: 10;
      transition: 0.3s;
    }

    .slider-btn:hover {
      background-color: #c59c28;
    }

    .left-btn {
      left: 20px;
    }

    .right-btn {
      right: 20px;
    }
  </style>

  <script>
    const slider = document.querySelector('.slider');
    let slides = Array.from(document.querySelectorAll('.slide'));
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');

    let currentIndex = 0;
    let autoSlideInterval;

    function moveSlides() {
      slides.forEach((slide, index) => {
        const img = slide.querySelector('img');

        if (index === currentIndex) {
          img.style.transform = 'scale(1.1)';
          img.style.opacity = '1';
          img.style.filter = 'brightness(100%)';
        } else if (index === (currentIndex + 1) % slides.length) {
          img.style.transform = 'scale(0.9)';
          img.style.opacity = '0.8';
          img.style.filter = 'brightness(90%)';
        } else if (index === (currentIndex + 2) % slides.length) {
          img.style.transform = 'scale(0.8)';
          img.style.opacity = '0.5';
          img.style.filter = 'brightness(60%)';
        } else {
          img.style.transform = 'scale(0.7)';
          img.style.opacity = '0.4';
          img.style.filter = 'brightness(50%)';
        }
      });

      slider.style.transform = translateX(-${currentIndex * (100 / 3)}%);
    }

    function nextSlide() {
      currentIndex = (currentIndex + 1) % slides.length;
      moveSlides();
    }

    function prevSlide() {
      currentIndex = (currentIndex - 1 + slides.length) % slides.length;
      moveSlides();
    }

    function startAutoSlide() {
      autoSlideInterval = setInterval(nextSlide, 3000);
    }

    function stopAutoSlide() {
      clearInterval(autoSlideInterval);
    }

    // Button events
    nextBtn.addEventListener('click', () => {
      stopAutoSlide();
      nextSlide();
      startAutoSlide();
    });

    prevBtn.addEventListener('click', () => {
      stopAutoSlide();
      prevSlide();
      startAutoSlide();
    });

    slider.addEventListener('mouseenter', stopAutoSlide);
    slider.addEventListener('mouseleave', startAutoSlide);

    // Init
    moveSlides();
    startAutoSlide();
  </script>
